// https://google.github.io/styleguide/jsguide.html
{
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 7
  },
  "rules": {
    // Rules that are different from Google style guide
    "no-cond-assign": "error",
    "no-console": 0,
    "no-warning-comments": "warn",
    "radix": "error",
    "yoda": "error",
    "camelcase": ["error", {
      "properties": "always"
    }],
    "consistent-this": ["error"],
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "keyword-spacing": "error",
    "max-len": ["warn", {
      "code": 100,
      "tabWidth": 2,
      "ignoreComments": true,
      "ignoreUrls": true
    }],
    "max-nested-callbacks": ["warn", 4],
    "max-params": ["warn", 3],
    "new-parens": "error",
    "no-multiple-empty-lines": ["error", {
      "max": 1
    }],
    "no-negated-condition": "error",
    "operator-assignment": "error",
    "space-in-parens": "error",

    // ES6
    "arrow-parens": ["error", "as-needed"],
    "arrow-spacing": "error",
    "no-duplicate-imports": ["error", {
      "includeExports": true
    }],
    "no-useless-constructor": "error",
    "no-useless-rename": "error",
    "no-var": "error",
    "prefer-const": "error",
    "template-curly-spacing": "error"
  }
}
